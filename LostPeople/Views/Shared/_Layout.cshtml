<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
  
    <section class="mb-3 bg-dark">

        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link active text-success" href="/">Головна сторінка</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-success" href="/Home/Map">Мапа</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-success" href="/Home/Search/">Пошук</a>
            </li>
            
        </ul>

    </section>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Сайт пошуку людей</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>